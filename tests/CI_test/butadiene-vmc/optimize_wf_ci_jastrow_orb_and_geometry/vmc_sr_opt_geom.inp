%module general
    title        'butadiene'
    pool         './pool/'
    pseudopot    BFD
    basis        BFD-Q
    mode         'vmc_one_mpi1'
%endmodule

load molecule        $pool/butadiene.xyz
load basis_num_info  $pool/BFD-Q.bfinfo

load determinants    cas44.det
load orbitals        cas44.lcao
load symmetry        cas44.sym
load jastrow         jastrow_good_b3lyp.0
load jastrow_der     jastrow.der



%module electrons
    nup           11
    nelec         22
%endmodule

%module optgeo
    iforce_analy 1
    iuse_zmat    0     #default anyway
    alfgeo       0.5
%endmodule

%module optwf
    ioptwf        1
    ioptci        1
    ioptjas       1
    ioptorb       1
    method        'sr_n'
    multiple_adiag 0
    ncore         0
    nextorb       280
    nblk_max      500
    no_active     0
    nopt_iter     2
    sr_tau        0.05
    sr_eps        0.001
    sr_adiag      0.01
    isample_cmat  0
    energy_tol    0.0
%endmodule

%module blocking_vmc
    vmc_nstep     10
    vmc_nblk      50
    vmc_nblkeq    1
    vmc_nconf_new 0
%endmodule
