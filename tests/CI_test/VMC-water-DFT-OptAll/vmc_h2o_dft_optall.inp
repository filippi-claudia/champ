%module general
    title           'H2O DFT calculation'
    pool            './pool/'
    mode            vmc
%endmodule


load trexio          H2O_DFT.hdf5
load jastrow         jastrow.dft_optimal_2body
load jastrow_der     jastrow.der

%module electrons
    nup           4
    nelec         8
%endmodule

%module optwf
    ioptwf        1
    ioptci        0
    ioptjas       1
    ioptorb       1
    method        'sr_n'
    multiple_adiag 0
    ncore         0
    nextorb       100
    nblk_max      4000
    no_active     0
    nopt_iter     20
    sr_tau        0.05
    sr_eps        0.01
    sr_adiag      0.01
    isample_cmat  0
    energy_tol    0.0
%endmodule


%module blocking_vmc
    vmc_nstep     20
    vmc_nblk      1000
    vmc_nblkeq    1
    vmc_nconf_new 0
%endmodule
