    pool         './pool/'
    basis        sto_cvb1
    weights      [ 1.0d0,  1.0d0 , 1.0d0]
    mode         'vmc_one_mpi1'
    nloc        0
%endmodule

load molecule        $pool/h2.xyz
load basis_num_info  $pool/sto_cvb1.bfinfo

load determinants    rhf.det
